[Unit]
Description=Svitlo Telegram Bot (Power Monitor)
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
User=ubuntu
Group=ubuntu
WorkingDirectory=/home/ubuntu/LystTgFirefox
EnvironmentFile=/home/ubuntu/LystTgFirefox/.env
ExecStart=/home/ubuntu/LystTgFirefox/.venv/bin/python /home/ubuntu/LystTgFirefox/svitlo_bot.py
Restart=always
RestartSec=5
KillSignal=SIGINT
TimeoutStopSec=30

[Install]
WantedBy=multi-user.target
